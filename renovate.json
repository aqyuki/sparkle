{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "all non-major",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "platformCommit": true,
  "labels": [
    ":arrow_up: dependency",
    ":robot: renovate"
  ],
  "configMigration": true
}
